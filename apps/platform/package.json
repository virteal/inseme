{
  "name": "platform",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=24 <25"
  },
  "scripts": {
    "test": "node scripts/test-runner.js",
    "backfill:lastModifiedBy": "node scripts/backfill-lastmodifiedby.js",
    "dev": "npm run compile:briques && vite",
    "compile:briques": "node ../../packages/cop-host/scripts/compile-briques.js",
    "netlify:dev": "npm run compile:briques && netlify dev",
    "build": "npm run compile:briques && vite build",
    "lint:css": "stylelint \"src/**/*.css\" --allow-empty-input",
    "preview": "vite preview",
    "extract:tw": "node scripts/extract-classes.js --tailwind",
    "count:loc": "node scripts/count-loc.js",
    "generate-tailwind-dump": "node scripts/generate-tailwind-dump.js",
    "generate-tailwind-dump:win": "node scripts/generate-tailwind-dump-win2.js",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,md,json,html}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,scss,md,json,html}\"",
    "prepare": "husky",
    "fmt:deno": "deno fmt src/netlify/edge-functions",
    "format:full": "npm run format && npm run fmt:deno",
    "scrape:cortideri": "node scripts/scrape-cortideri.js",
    "rag:chat": "node scripts/rag_chat_cli.js",
    "check:deno": "deno check src/netlify/edge-functions/**/*.js",
    "check:node": "node scripts/check_node_syntax.js",
    "check": "npm run check:deno",
    "set-ngrok": "node scripts/set-ngrok.js",
    "provision": "node scripts/provision-instance.js",
    "schema:check": "node scripts/check-schema-versions.js",
    "schema:sync": "node scripts/check-schema-versions.js --sync",
    "schema:update": "node scripts/check-schema-versions.js --update",
    "cop:cli": "node ../../packages/cop-cli/src/cli.js --help"
  },
  "lint-staged": {
    "*.{js,jsx,css,md}": "prettier --write"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/generative-ai": "^0.24.1",
    "@huggingface/inference": "^4.13.5",
    "@inseme/cop-host": "*",
    "@inseme/ui": "*",
    "@mistralai/mistralai": "^1.10.0",
    "@phosphor-icons/react": "^2.1.10",
    "@supabase/supabase-js": "^2.87.1",
    "@tailwindcss/typography": "^0.5.19",
    "cheerio": "^1.0.0-rc.12",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "geoportal-extensions-leaflet": "^2.4.3",
    "glob": "^13.0.0",
    "leaflet": "^1.9.4",
    "node-fetch": "^3.0.0",
    "npm-ls": "^1.0.0",
    "openai": "^6.10.0",
    "pg": "^8.0.0",
    "postgres": "^3.4.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^18.3.1",
    "react-leaflet": "^4.2.0",
    "react-router-dom": "^7.10.1",
    "recharts": "^3.5.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "supabase": "^2.65.8",
    "swr": "^2.3.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.22",
    "chromatic": "^13.3.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "minimist": "^1.2.8",
    "ngrok": "^5.0.0-beta.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.7"
  }
}
