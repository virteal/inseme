{
  "firebase": "inseme",
  "public": "public",
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**"
  ],
  "cleanUrls": true,
  "headers": [ {
    "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
    "headers" : [ {
      "key" : "Access-Control-Allow-Origin",
      "value" : "*"
    } ]
    }, {
    "source" : "**/*.@(jpg|jpeg|gif|png)",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=7200"
    } ]
    }, {
    // Sets the cache header for the jtml pages to a very short time
    "source" : "*.html",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=1"
    } ]
  } ]
}
